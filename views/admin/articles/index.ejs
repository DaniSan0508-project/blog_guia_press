<%- include('../../partials/navbar')%>
<%- include('../../partials/header')%>
<div class="container">
<hr>
<h2>Artigos</h2>
<a class="btn btn-success" href="/admin/articles/new">Criar Nova Artigo</a>
<hr>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Slug</th>
            <th>Category</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% articles.forEach(articles=>{%>
            <tr>
                <td><%= articles.id %></td>
                <td><%= articles.title %></td>
                <td><%= articles.slug %></td>
                <td><%= articles.category.title %></td>
                <td>
                <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmarDelecao(event,this)">
                    <input type="hidden" name="id" value="<%= articles.id%>">
                    <button class="btn btn-danger">Deletar</button>
                </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
</div>
<%- include('../../partials/footer')%>

<script>
    //confirmacao de exclusão
    function confirmarDelecao(event,form){
        event.preventDefault()
        const decision = confirm('Você quer deletar esse artigo ?')
        if(decision){
            form.submit()
        }
    }
</script>
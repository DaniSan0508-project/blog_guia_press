
<%- include('partials/header.ejs')%>    
<%- include('partials/homenavbar.ejs')%>
<body>
    <br>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4">Bem Vindo ao Blog</h1>
            <p class="lead">Este é um projeto de um blog simples , porém bem funcional</p>
            <hr class="my-4">
            <p>Ele é feito todo em Bootstrap e Node.js</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
          </div>
        <% articles.forEach(article=>{ %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
            <a style="float: right;" href="/articles/page/2">Next >>></a>
            </div>
            <hr>
        </div>
    </div>
</body>
<%- include('partials/footer.ejs')%>
